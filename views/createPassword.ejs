  <link rel="stylesheet" href="/styles/signIn_signUp.css">
  <link rel="stylesheet" href="/styles/sidebar.css" type="text/css">
</head>

<body>
  <%- include("partials/_header.ejs") %>

  <div class="d-flex justify-content-between">
    <%- include("partials/_sidebar.ejs") %>

    <div class="sign-inUp container">
      <form class="container-fluid d-flex flex-column">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">Category</span>
          </div>
          <select required class="form-control form-control">
            <option value="" selected disabled>Choose ...</option>
            <option>Work</option>
            <option>Entertainment</option>
            <option>Social</option>
            <option>Other</option>
          </select>
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Website URL</span>
          </div>
          <input required type="url" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="What is the domain of this app?">
        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">Username</span>
          </div>
          <input required type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="What is your username for this app?">
        </div>

        <div class="input-group input-group-sm mb-3">
          <div class="form-group mx-auto">
            <div class="form-check form-check-inline col-auto">
              <label class="form-check-label" for="inlineCheckbox1">Uppercase: </label>
              <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
            </div>
            <div class="form-check form-check-inline col-auto">
              <label class="form-check-label" for="inlineCheckbox2">Special characters:</label>
              <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
            </div>
            <div class="form-check form-check-inline col-auto">
              <label class="form-check-label" for="inlineCheckbox3">Numbers:</label>
              <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
            </div>
            <div class="form-check form-check-inline col-auto">
              <label class="form-check-label" for="inlineInput1">Length:</label>
              <input required class="form-control" type="number" id="inlineInput1" value="">
            </div>
          </div>
        </div>

        <div class="mx-auto">
          <button type="submit" class="btn btn-primary mb-2">Generate Password</button>
        </div>
      </form>
    </div>

    <div></div>

  </div>

  <%- include("partials/_footer_scripts.ejs") %>
</body>
</html>
